<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="1" author="misha">
        <!-- Добавление записи в таблицу city -->
        <sql>
            INSERT INTO city (name) VALUES ('City1');
        </sql>
    </changeSet>

    <changeSet id="2" author="misha">
        <!-- Добавление записи в таблицу guideweather -->
        <sql>
            INSERT INTO guideweather (description) VALUES ('Sunny');
        </sql>
    </changeSet>

    <changeSet id="3" author="misha">
        <!-- Добавление записи в таблицу weatherincity с использованием city_id и guide_id -->
        <sql>
            INSERT INTO weatherincity (city_id, date, temperature, guide_id)
            VALUES (
                           (SELECT id FROM city WHERE name = 'City1'),
                           '2023-10-14',
                           25.0,
                           (SELECT id FROM guideweather WHERE description = 'Sunny')
                   );
        </sql>
    </changeSet>
</databaseChangeLog>
