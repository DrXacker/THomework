<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <!-- Создание таблицы City -->
    <changeSet author="misha" id="createCityTable">
        <createTable tableName="CITY">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)" />
        </createTable>
    </changeSet>

    <!-- Создание таблицы WeatherInCity -->
    <changeSet author="misha" id="createWeatherInCityTable">
        <createTable tableName="WEATHER_IN_CITY">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city_id" type="UUID" />
            <column name="guide_id" type="UUID" />
            <column name="date" type="TIMESTAMP"/>
            <column name="temperature" type="DOUBLE"/>
        </createTable>
    </changeSet>

    <!-- Создание таблицы GuideWeather -->
    <changeSet author="misha" id="createGuideWeatherTable">
        <createTable tableName="GUIDE_WEATHER">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)" />
        </createTable>
    </changeSet>

    <!-- Добавление внешних ключей -->
    <changeSet author="misha" id="addForeignKeys">
        <addForeignKeyConstraint baseTableName="WEATHER_IN_CITY" baseColumnNames="city_id"
                                 constraintName="FK_WEATHERINCITY_City"
                                 referencedTableName="CITY" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseTableName="WEATHER_IN_CITY" baseColumnNames="guide_id"
                                 constraintName="FK_WeatherInCity_GuideWeather"
                                 referencedTableName="GUIDE_WEATHER" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>

    <!-- Добавление индексов -->
    <!-- Добавление индекса на поле name таблицы CITY -->
    <changeSet author="misha" id="addIndexToCityName">
        <createIndex indexName="idx_city_name" tableName="CITY">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <!-- Добавление составного индекса на поля city_id и guide_id таблицы WEATHER_IN_CITY -->
    <changeSet author="misha" id="addCompositeIndexToWeatherInCity">
        <createIndex indexName="idx_weather_in_city_composite" tableName="WEATHER_IN_CITY">
            <column name="city_id"/>
            <column name="guide_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>